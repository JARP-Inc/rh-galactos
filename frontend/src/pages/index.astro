---
import RecentArticles from "@components/RecentArticles";
import Layout from "@layouts/Layout.astro";
import getArticles from "@hooks/getArticles";
import LatestArticle from "@components/LatestArticle";

let myArticle = {
  title: "My Article",
  author: "John",
  content: "Hello world, I am the content of the article",
  date: "2015-98-22",
};
---

<Layout>
  <div class="flex flex-col py-5">
    <div class="text-3xl">Latest Article</div>
    <div class="divider"></div>
  </div>
  <LatestArticle article={myArticle} />
  <div class="mt-20 flex flex-col py-5">
    <div class="text-3xl">Latest Articles about the War</div>
    <div class="divider"></div>
  </div>
  <RecentArticles client:only />
  <div class="mt-20 flex flex-col py-5">
    <div class="text-3xl">Latest Articles about the Economy</div>
    <div class="divider"></div>
  </div>
  <RecentArticles client:only />
  <div class="mt-20 flex flex-col py-5">
    <div class="text-3xl">Latest Articles about the Trout population</div>
    <div class="divider"></div>
  </div>
  <RecentArticles client:only />
</Layout>
